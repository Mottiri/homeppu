rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 認証チェック
    function isAuthenticated() {
      return request.auth != null;
    }

    // 管理者チェック（Custom Claims使用）
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    // 画像サイズ制限（10MB）
    function isValidImageSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // 動画サイズ制限（100MB）
    function isValidVideoSize() {
      return request.resource.size < 100 * 1024 * 1024;
    }
    
    // ファイルサイズ制限（50MB）
    function isValidFileSize() {
      return request.resource.size < 50 * 1024 * 1024;
    }
    
    // プロフィール画像サイズ（5MB）
    function isValidProfileSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    // 画像ファイルのみ許可
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // 動画ファイルのみ許可
    function isVideo() {
      return request.resource.contentType.matches('video/.*');
    }
    
    // 許可されるファイルタイプ
    function isAllowedFile() {
      return request.resource.contentType.matches('application/pdf')
          || request.resource.contentType.matches('application/msword')
          || request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.*')
          || request.resource.contentType.matches('application/vnd.ms-excel')
          || request.resource.contentType.matches('text/plain')
          || request.resource.contentType.matches('application/zip');
    }
    
    // ユーザーヘッダー画像
    match /headers/{fileName} {
      allow read: if isAuthenticated();
      // ファイル名がユーザーIDで始まる場合のみ書き込み可能
      allow write: if isAuthenticated() 
                   && fileName.matches(request.auth.uid + '.*')
                   && isValidImageSize() 
                   && isImage();
      // 本人のみ削除可能
      allow delete: if isAuthenticated() 
                    && fileName.matches(request.auth.uid + '.*');
    }

    // ユーザープロフィール画像
    match /users/{userId}/profile/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
                   && request.auth.uid == userId 
                   && isValidProfileSize() 
                   && isImage();
    }
    
    // 投稿メディア - 画像
    match /posts/{userId}/images/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
                   && request.auth.uid == userId 
                   && isValidImageSize() 
                   && isImage();
      // 本人のみ削除可能
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // 投稿メディア - 動画
    match /posts/{userId}/videos/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
                   && request.auth.uid == userId 
                   && isValidVideoSize() 
                   && isVideo();
      // 本人のみ削除可能
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // 投稿メディア - ファイル
    match /posts/{userId}/files/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
                   && request.auth.uid == userId 
                   && isValidFileSize() 
                   && isAllowedFile();
      // 本人のみ削除可能
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // 投稿メディア - 動画サムネイル
    match /posts/{userId}/thumbnails/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
                   && request.auth.uid == userId 
                   && isValidProfileSize()  // 5MB limit for thumbnails
                   && isImage();
      // 本人のみ削除可能
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // 後方互換性：古い形式の投稿画像
    match /posts/{postId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
                   && isValidImageSize() 
                   && isImage();
      // 削除はCloud Functionsで自動処理、クライアントからは管理者のみ
      allow delete: if isAdmin();
    }
    
    // サークル画像（アイコン・ヘッダー）
    match /circles/{circleId}/{imageType}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
                   && isValidProfileSize() 
                   && isImage();
      // 削除はCloud Functionsで自動処理、クライアントからは管理者のみ
      allow delete: if isAdmin();
    }
    // タスク添付ファイル (画像・ファイル)
    match /task_attachments/{userId}/{taskId}/{fileName} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() 
                   && request.auth.uid == userId 
                   && isValidFileSize(); // 50MB limit
      // 本人のみ削除可能
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }

    // 問い合わせ添付画像（ユーザーIDごとに分離）
    match /inquiries/{userId}/{fileName} {
      // 本人または管理者のみ読み取り可能
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      // 本人のみ書き込み可能
      allow write: if isAuthenticated()
                   && request.auth.uid == userId
                   && isValidProfileSize()  // 5MB limit
                   && isImage();
      // 管理者のみ削除可能
      allow delete: if isAdmin();
    }
  }
}


